@model AppFluxoDeCaixa.Models.Clientes

@{
    ViewData["Title"] = "Adicionar Cliente";
}
<h1 class="display-5 text-light text-center">Adicionar Cliente</h1>

<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-12 col-md-6 mt-2">
            <div class="form-group">
                <label asp-for="ClientesNome" class="control-label"></label>
                <input asp-for="ClientesNome" class="form-control" />
                <span asp-validation-for="ClientesNome" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-2 mt-2">
            <label>Tipo Pessoa</label>
            <select class="form-select" id="TipoPessoa" name="TipoPessoa">
                <option selected>Selecione...</option>
                <option value="F">Física</option>
                <option value="J">Jurídica</option>
            </select>
        </div>
        <div class="col-12 col-md mt-2">
            <div class="form-group">
                <label asp-for="CpfCnpj" class="control-label"></label>
                <input asp-for="CpfCnpj" class="form-control" />
                <span asp-validation-for="CpfCnpj" class="text-danger"></span>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-12 col-md-8 mt-2">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 col-md mt-2">
            <div class="form-group">
                <label asp-for="DataNascFundacao" class="control-label"></label>
                <input type="date" asp-for="DataNascFundacao" class="form-control" />
                <span asp-validation-for="DataNascFundacao" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-3 mt-2">
            <div class="form-group">
                <label asp-for="CEP" class="control-label"></label>
                <input asp-for="CEP" class="form-control" />
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 col-md mt-2">
            <div class="form-group">
                <label asp-for="Logradouro" class="control-label"></label>
                <input asp-for="Logradouro" class="form-control" />
                <span asp-validation-for="Logradouro" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 col-md-2 mt-2">
            <div class="form-group">
                <label asp-for="numero" class="control-label"></label>
                <input asp-for="numero" class="form-control" />
                <span asp-validation-for="numero" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md mt-2">
            <div class="form-group">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md mt-2">
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-2 mt-2">
            <div class="form-group">
                <label asp-for="UF" class="control-label"></label>
                <input asp-for="UF" class="form-control" />
                <span asp-validation-for="UF" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md mt-2">
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md mt-2">
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mt-2">
            <div class="form-group">
                <label>Observações</label>
                <textarea class="form-control" id="Observacao" name="Observacao" rows="3"></textarea>
            </div>
            <span asp-validation-for="Observacao" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="DataCadastro" class="form-control" value=@DateTime.Now.ToString(" yyyy-MM-dd hh:mm:ss") />
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="CadastroAtivo" value="true" />
    </div>
    <div class="row">
        <div class="col col-md-4 mt-4">
            <a class="btn btn-outline-danger w-100" asp-action="Index">Cancelar</a>
        </div>

        <div class="col-2 col-md mt-4">
        </div>
        <div class="col col-md-4 mt-4">
            <input type="submit" value="Salvar" class="btn btn-success w-100" />
        </div>
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}